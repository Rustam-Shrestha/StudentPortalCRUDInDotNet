@model StudentPortal.Models.AddStudentViewModel

<!--this page is the form that will give interface and fronm where the dat is transported asp-for is the attribute for getting form data to specific variable -->
<div class="container mt-5">
    <h2>Subscription Form</h2>
    <form method="POST">
        <div class="form-group">
            <label for="name">Name</label>
            <input type="text" class="form-control" id="name" placeholder="Enter your name" asp-for="Name" />
        </div>
        <div class="form-group">
            <label for="email">Email</label>
            <input type="email" class="form-control" id="email" placeholder="Enter your email" asp-for="Email" />
        </div>
        <div class="form-group">
            <label for="phone">Phone</label>
            <input type="tel" class="form-control" id="phone" placeholder="Enter your phone number" asp-for="Phone" />
        </div>
        <div class="form-group">
            <label>Subscribed</label>
            <div class="form-check">
                <input class="form-check-input" type="radio" name="subscribed" id="subscribedYes" value="yes" asp-for="Subscribed">
                <label class="form-check-label" for="subscribedYes">
                    Yes
                </label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="radio" name="subscribed" id="subscribedNo" value="no" asp-for="Subscribed">
                <label class="form-check-label" for="subscribedNo">
                    No
                </label>
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>